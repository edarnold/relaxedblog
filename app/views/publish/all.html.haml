%h2 Blog pages
%h3
  = link_to 'New page', url(:publish, :action => "new")
%br
%ul#page-list
  - for page in @pages
    %li
      %h3
        = link_to page.title, url(:page, :id => page.id)
        %small
          \- by
          = page.author.name
      .page-actions
        %span= link_to 'edit', url(:publish, :action => "edit", :id => page.id)
        - if page.published
          %span= link_to 'unpublish', url(:publish, :action => "publish_toggle", :id => page.id)
        - else
          %span= link_to 'publish', url(:publish, :action => "publish_toggle", :id => page.id)